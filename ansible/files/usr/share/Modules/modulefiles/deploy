#%Module 1.0
#
#  CI module for use with 'environment-modules' package:
#
setenv        CVMFS_DIR   /cvmfs/code-rade.africa-grid.org
setenv 	      DEPLOY_DIR  $::env(CVMFS_DIR)/$::env(SITE)/$::env(OS)/$::env(ARCH)/$::env(NAME)/$::env(VERSION)
setenv        REPO_DIR      $::env(CVMFS_DIR)/$::env(SITE)/$::env(OS)/$::env(ARCH)/$::env(NAME)/$::env(VERSION)
setenv        SRC_DIR        /data/src/$::env(NAME)/$::env(VERSION)
setenv        SOFT_DIR     $::env(CVMFS_DIR)/$::env(SITE)/$::env(OS)/$::env(ARCH)/$::env(NAME)/$::env(VERSION)


set           MODULES                $::env(CVMFS_DIR)/modules
setenv        ASTRO_MODULES                      $MODULES/astronomy
setenv        BIOINFORMATICS_MODULES  $MODULES/bioinformatics
setenv        COMPILERS_MODULES            $MODULES/compilers
setenv        LANGUAGES_MODULES           $MODULES/languages
setenv        LIBRARIES_MODULES               $MODULES/libraries
setenv        PHYSICAL_MODULES               $MODULES/physical-sciences
setenv        HEP_MODULES                          $MODULES/hep


prepend-path  MODULEPATH             $MODULES
prepend-path  MODULEPATH             $::env(COMPILERS_MODULES)
prepend-path  MODULEPATH             $::env(PHYSICAL_MODULES)
prepend-path  MODULEPATH             $::env(BIOINFORMATICS_MODULES)
prepend-path  MODULEPATH             $::env(LANGUAGES_MODULES)
prepend-path  MODULEPATH             $::env(LIBRARIES_MODULES)
prepend-path  MODULEPATH             $::env(HEP_MODULES)
